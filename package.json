{
  "name": "backend-caveo",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "infra:up": "npm-run-all infra:db migration:run",
    "infra:db": "docker-compose up -d",
    "infra:down": "docker-compose down --remove-orphans --volumes",
    "migration:run": "npm run typeorm migration:run -- -d ./ormconfig.ts",
    "seed": "ts-node -r tsconfig-paths/register src/core/infrastructure/seeders/index.ts",
    "start": "node -r tsconfig-paths/register -r ts-node/register ./src/main.ts",
    "start:dev": "nodemon src/main.ts",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./lib",
    "lint:staged": "lint-staged",
    "test": "jest --runInBand",
    "typeorm": "typeorm-ts-node-commonjs",
    "version": "tsc -v"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gabriel-H-Santos/backend-caveo.git"
  },
  "keywords": [],
  "author": "Gabriel Santos",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Gabriel-H-Santos/backend-caveo/issues"
  },
  "homepage": "https://github.com/Gabriel-H-Santos/backend-caveo#readme",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.0",
    "aws-sdk": "^2.1692.0",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express-session": "^1.18.1",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-cors": "^0.0.16",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-koa": "^0.0.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-cors": "^0.0.6",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "reflect-metadata": "^0.2.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "typescript": "^5.7.3",
    "winston": "^3.17.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --single-quote true --trailing-comma all --print-width 120 --semi false",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:staged",
      "pre-push": "npm run build",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
